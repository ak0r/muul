---
interface Props {
  title: string;
  published: Date;
  readTime: string;
  tags?: string[];
}

const { title, published, readTime, tags } = Astro.props;

const formattedDate = published.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<header class="post-header">
  <h1>{title}</h1>
  <div class="post-meta">
    <time datetime={published.toISOString()}>{formattedDate}</time>
    <span aria-hidden="true">Â·</span>
    <span>{readTime}</span>
  </div>
  {tags && tags.length > 0 && (
    <div class="post-tags" aria-label="Tags">
      {tags.map((tag) => (
        <a href={`/tags/${tag}`} class="badge">{tag}</a>
      ))}
    </div>
  )}
</header>

<style>
  .post-header {
    margin-bottom: var(--space-8);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--muted-foreground);
    font-size: 0.9rem;
    margin-top: var(--space-2);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }
</style>