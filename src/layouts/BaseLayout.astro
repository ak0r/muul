---
import { Font } from 'astro:assets';
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ThemeInit from "@/components/ThemeInit.astro";
import "@/styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon-light.ico" type="image/x-icon" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO â€” injected per page -->
    <slot name="seo" />

    <!-- Additional per-page head tags -->
    <slot name="head" />

    <!-- Theme init (prevents flash) -->
    <ThemeInit />

    <!-- Fonts -->
    <Font cssVariable="--font-headings" preload />
    <Font cssVariable="--font-primary" preload />
    <Font cssVariable="--font-secondary" preload />
    <Font cssVariable="--font-code" preload />
    <Font cssVariable="--font-brand" preload />
  </head>
  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />

    <!-- Per-page scripts -->
    <slot name="scripts" />
  </body>
</html>